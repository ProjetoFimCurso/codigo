<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:text="http://schemas.android.com/apk/res-auto"
    android:gravity="start"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".main.MainMenu">

    <Button
        android:id="@+id/btIncubar"
        android:layout_width="@dimen/button_size_default"
        android:layout_height="@dimen/button_size_default"
        android:layout_above="@+id/btOther"
        android:layout_alignParentLeft="true"
        android:text="@string/button_incubar"
        style="@style/Widget.AppCompat.Button.Colored"

        android:layout_marginBottom="29dp"
        android:layout_marginLeft="20dp"
        android:onClick="listar" />

    <Button
        android:id="@+id/btAgenda"
        android:layout_width="@dimen/button_size_default"
        android:layout_height="@dimen/button_size_default"
        android:layout_alignParentLeft="true"
        android:text="@string/button_agenda"
        android:layout_alignParentTop="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="47dp"
        android:onClick="listar"
        android:src="@drawable/ic_action_agenda" />

    <Button
        android:id="@+id/btNextAction"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/button_size_default"
        android:layout_height="@dimen/button_size_default"
        android:layout_alignParentRight="true"
        android:text="@string/button_next_actions"
        android:layout_alignTop="@+id/btAgenda"
        android:layout_marginRight="25dp"
        android:onClick="listar"
       />

    <Button
        android:id="@+id/btTalvez"
        android:layout_width="@dimen/button_size_default"
        android:layout_height="@dimen/button_size_default"
        android:layout_alignRight="@+id/btNextAction"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignTop="@+id/btIncubar"
        android:text="Talvez"
        android:onClick="listar" />

    <Button
        android:id="@+id/btOther"
        android:layout_width="@dimen/button_size_default"
        android:layout_height="@dimen/button_size_default"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_centerHorizontal="true"
        android:text="@string/button_outros"
        android:layout_marginBottom="22dp"
        android:onClick="listar"/>

    <Button
        android:id="@+id/btInbox"
        android:layout_width="@dimen/button_size_default"
        android:layout_height="@dimen/button_size_default"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/button_caixa_de_entrada"
        android:layout_above="@+id/btDelegados"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:onClick="listar" />

    <Button
        android:id="@+id/btDelegados"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/button_size_default"
        android:layout_height="@dimen/button_size_default"
        android:layout_alignLeft="@+id/btInbox"
        android:layout_alignTop="@+id/btIncubar"
        android:text="@string/button_delegados"
        android:onClick="listar"
        />

</RelativeLayout>
