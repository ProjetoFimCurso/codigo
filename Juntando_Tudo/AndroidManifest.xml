<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juntando_tudo"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.READ_CALENDAR"/>
	<uses-permission android:name="android.permission.WRITE_CALENDAR"/>
	
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:name="pfc.ime.gtdmanager.controller.Controller"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="pfc.ime.gtdmanager.main.LoginGoogle"
            android:label="@string/title_activity_login_google"
            android:parentActivityName="@string/title_activity_main_menu"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="pfc.ime.gtdmanager.main.MainMenu"
            android:label="@string/title_activity_main_menu" 
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter><meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.juntando_tudo.MainMenu" />
        </activity>
        <activity
            android:name="pfc.ime.gtdmanager.main.Lista"
            android:label="@string/title_activity_lista"
            android:parentActivityName="pfc.ime.gtdmanager.main.MainMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.juntando_tudo.MainMenu" />
        </activity>
        <activity android:name="pfc.ime.gtdmanager.main.OtherLists" android:label="@string/title_activity_other_list" android:parentActivityName="pfc.ime.gtdmanager.main.MainMenu"></activity>
        <activity android:name="pfc.ime.gtdmanager.main.Lista_Calendar" android:label="@string/title_activity_lista_calendar" android:parentActivityName="pfc.ime.gtdmanager.main.MainMenu"></activity>
    </application>

</manifest>
